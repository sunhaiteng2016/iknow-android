<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.beyond.popscience.locationgoods.ShopOrderDetailActivity">

    <include layout="@layout/public_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp20"
                android:paddingTop="@dimen/sp14"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="@dimen/sp14">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/djstb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp15"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_title"
                        android:text="待付款"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/tv_title_time"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        android:text="13:44:57"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f3f3f3" />
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp10"
                android:paddingTop="@dimen/dp8"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp8">

                <TextView
                    android:id="@+id/tv_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人名"
                    android:padding="@dimen/dp8"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="@dimen/sp13" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:text="13514990174"
                    android:padding="@dimen/dp8"
                    android:textColor="#000"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_address_name"
                    android:padding="@dimen/dp8"
                    android:text="这是一个地址"
                    android:textColor="#333"
                    android:textSize="@dimen/sp13" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8"
                android:background="#f3f3f3" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp10">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp4">
                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/dp80"
                        android:layout_height="@dimen/dp80"
                        android:textColor="#000"
                        android:textSize="@dimen/sp14" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_toRightOf="@+id/cardView"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="枇杷"
                        android:textColor="#000"
                        android:textSize="@dimen/sp13" />

                    <TextView
                        android:id="@+id/tv_attr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp8"
                        android:text="价格单位"
                        android:textColor="#333"
                        android:textSize="@dimen/sp12" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp8"
                            android:textColor="#000"
                            android:textSize="@dimen/sp13"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_alignParentRight="true"
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp8"
                            android:textColor="#000"
                            android:textSize="@dimen/sp13"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8"
                android:background="#f3f3f3" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="订单编号"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_dd_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="配送服务"
                    android:textColor="#333"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="下单时间"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_dd_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="浙江省台州市椒江区"
                    android:textColor="#333"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="商品总额"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:textColor="#333"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="运费"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_yf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="浙江省台州市椒江区"
                    android:textColor="#333"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="商品优惠"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_dd_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="￥ 0.00"
                    android:textColor="#333"
                    android:textSize="@dimen/sp12"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8"
                android:background="#f3f3f3" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <!--待付款-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45">

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_submit_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/blue"
            android:gravity="center"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp25"
            android:text="确认付款"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@+id/tv_submit_order"
            android:gravity="center"
            android:text="￥10"
            android:textColor="@color/red"
            android:textSize="@dimen/sp17"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_ssss"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_price_bottom"
            android:gravity="center"
            android:text="应收："
            android:textColor="@color/black"
            android:textSize="@dimen/sp17"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
