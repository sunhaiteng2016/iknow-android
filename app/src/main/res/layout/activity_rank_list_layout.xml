<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beyond.popscience.module.point.RankListActivity">

    <include layout="@layout/common_toplayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical">

                    <com.beyond.popscience.widget.CircleImageView
                        android:id="@+id/rank_user_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_circle_gray"
                        android:padding="@dimen/dp2"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/rank_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12500"
                        android:textColor="@color/red"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/rank_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="排名:2531"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <View
                style="@style/split_line_ten"
                android:layout_marginTop="20dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rank_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
