<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topReLay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3598DA">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="50dp"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp40"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:onClick="backClick"
            android:src="@drawable/icon_back" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/ib_back"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="西湖区"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <ImageView
            android:id="@+id/iv111"
            android:layout_marginBottom="@dimen/dp12"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView4"
            android:src="@drawable/xiangxiabai"
            android:layout_width="13dp"
            android:layout_height="13dp" />
        <LinearLayout
            android:layout_toLeftOf="@+id/rightImgView"
            android:layout_toRightOf="@+id/iv111"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_alignParentBottom="true"
            android:id="@+id/titleLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:gravity="center"
            android:paddingTop="@dimen/dp4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp20"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="招聘"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/qz"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="求职"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/titleTxtView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="111111"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/sp21" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="(切换)"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/titleImageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/arrow_bottom" />

        </LinearLayout>
        <TextView
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/rightImgView"
            android:layout_marginLeft="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_alignParentBottom="true"
            android:background="@drawable/icon_search_white" />
        <View
            android:id="@+id/shadowView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow_bottom_grey" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/searchTopLinLay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5097d4"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:visibility="gone">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/transparent"
                android:onClick="backClick"
                android:src="@drawable/icon_back" />

            <EditText
                android:id="@+id/searchEditTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_white_round"
                android:drawableLeft="@drawable/icon_search_black"
                android:drawablePadding="18dp"
                android:enabled="false"
                android:gravity="left|center_vertical"
                android:hint="搜索"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="#9B9B9B"
                android:textCursorDrawable="@drawable/edittext_cursor_drawable"
                android:textSize="@dimen/sp16" />

            <Button
                android:id="@+id/searchBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/transparent2"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:visibility="invisible"
                />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>