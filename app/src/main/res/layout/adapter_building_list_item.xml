<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/titleTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="阿里巴巴和马超市配送员"
                android:textColor="@color/grey17"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTxtView"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="位置："
                    android:textColor="@color/blue2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/addressss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleTxtView"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tradeTxtView"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="150dp"
                    android:text=" | 180m² | 2室"
                    android:textColor="@color/grey15"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTxtView"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tradeTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="出租"
                    android:textColor="@color/blue2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/sizeTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleTxtView"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tradeTxtView"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="150dp"
                    android:text=" | 180m² | 2室"
                    android:textColor="@color/grey15"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/descriptTxtView"
                android:layout_below="@+id/sizeTxtView">

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:text="¥5.00"
                    android:textColor="@color/red4"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="发布时间："
                    android:textColor="@color/blue2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/descriptTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:maxLines="2"
                    android:text="发布于5天前 | 10.00km"
                    android:textColor="@color/grey15"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>