<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.beyond.popscience.module.home.shopcart.MoreMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15">

        <ImageView
            android:id="@+id/black"
            android:layout_width="@dimen/dp25"
            android:layout_height="@dimen/dp25"
            android:layout_centerVertical="true"
            android:src="@drawable/chacha" />

        <TextView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="完成"
            android:textSize="@dimen/sp18"
            android:visibility="gone" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp15"
                android:text="我的应用"
                android:textColor="#333333"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />

            <com.beyond.popscience.view.MyGridView
                android:id="@+id/my_menu_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:numColumns="4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8"
                android:background="#f3f3f3" />

            <com.beyond.popscience.view.CustomExpandableListView
                android:id="@+id/elv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:childDivider="@android:color/transparent"
                android:divider="@null"
                android:groupIndicator="@null" />

            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp15"
                android:text="为您推荐"
                android:textColor="#333333"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />

            <com.beyond.popscience.view.MyGridView
                android:visibility="gone"
                android:id="@+id/wntj_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:numColumns="4" />

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8"
                android:background="#f3f3f3" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp15"
                android:text="科普栏目"
                android:textColor="#333333"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />

            <com.beyond.popscience.view.MyGridView
                android:visibility="invisible"
                android:id="@+id/lpln_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:numColumns="4" />

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp8"
                android:background="#f3f3f3" />

            <TextView
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp15"
                android:text="第三方服务"
                android:textColor="#333333"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />

            <com.beyond.popscience.view.MyGridView
                android:id="@+id/dsf_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp8"
                android:numColumns="4" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
