<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_gray_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toplayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/positionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/positionTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职位"
                        android:textColor="@color/grey3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/positionTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/positionTip"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择职位"
                        android:lines="1"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_intro_black" />

                    <EditText
                        android:id="@+id/descriptEditTxt"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/transparent"
                        android:gravity="top|left"
                        android:hint="详细描述职位 "
                        android:inputType="textMultiLine"
                        android:textColor="@color/black"
                        android:textColorHint="#9b9b9b"
                        android:textSize="@dimen/sp16" />

                </LinearLayout>

                <com.beyond.popscience.frame.view.DragLinearView
                    android:id="@+id/coverPicDragLinearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp" />

                <com.beyond.popscience.frame.view.DragLinearView
                    android:id="@+id/dragLinearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:background="@color/lineColor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <TextView
                        android:id="@+id/priceTipTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_blue_round"
                        android:drawableLeft="@drawable/icon_price_white"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:paddingLeft="11dp"
                        android:paddingRight="11dp"
                        android:paddingTop="3dp"
                        android:text="工资范围"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp15" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/priceTipTxtView"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="0dp">

                        <EditText
                            android:id="@+id/priceMinEditTxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:digits="1234567890."
                            android:gravity="center|right"
                            android:hint="最低工资"
                            android:inputType="numberSigned"
                            android:lines="1"
                            android:paddingLeft="10dp"
                            android:paddingRight="15dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#e0e0e0"
                            android:textSize="24sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="#e0e0e0" />

                        <EditText
                            android:id="@+id/priceMaxEditTxt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:digits="1234567890."
                            android:gravity="center|left"
                            android:hint="最高工资"
                            android:inputType="numberSigned"
                            android:lines="1"
                            android:paddingLeft="15dp"
                            android:paddingRight="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="#e0e0e0"
                            android:textSize="24sp" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/rl_ss"
                            android:layout_width="@dimen/dp80"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true">

                            <ImageView
                                android:id="@+id/mianyi_iv"
                                android:src="@drawable/check_nor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical" />
                            <TextView
                                android:textSize="18sp"
                                android:padding="@dimen/dp8"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="面议" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/addressTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系地点"
                        android:textColor="@color/grey3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addressTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/addressTip"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择地点"
                        android:lines="1" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#e0e0e0" />

                <EditText
                    android:id="@+id/addressDetailEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入您的详细位置..."
                    android:maxLines="5"
                    android:minHeight="45dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/grey3"
                    android:textColorHint="@color/grey15"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/educationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/educationTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最低学历"
                        android:textColor="@color/grey3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/educationTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/educationTip"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:hint="请选择学历"
                        android:lines="1" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#e0e0e0" />

                <RelativeLayout
                    android:id="@+id/workExperienceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/workExperienceTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="工作经验"
                        android:textColor="@color/grey3"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/workExperienceTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/workExperienceTip"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/arrow_right"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:lines="1" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#e0e0e0" />

                <EditText
                    android:id="@+id/requireEditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入要求和详细说明..."
                    android:maxLines="5"
                    android:minHeight="45dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/grey3"
                    android:textColorHint="@color/grey15"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/lineColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <EditText
                        android:id="@+id/userNameEditTxt"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:drawableLeft="@drawable/icon_personal_2"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical|left"
                        android:hint="填写联系人"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#9b9b9b"
                        android:textSize="@dimen/sp16" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#e0e0e0" />

                    <EditText
                        android:id="@+id/phoneEditTxt"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:drawableLeft="@drawable/icon_phone_black"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical|left"
                        android:hint="填写联系方式"
                        android:inputType="phone"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#9b9b9b"
                        android:textSize="@dimen/sp14" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/publishView"
                android:layout_width="185dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_red_round"
                android:gravity="center"
                android:text="确认发布"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>