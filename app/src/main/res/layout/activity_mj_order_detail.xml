<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.beyond.popscience.locationgoods.MjOrderDetailActivity">

    <include layout="@layout/public_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp20"
                android:paddingTop="@dimen/sp14"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="@dimen/sp14">

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仙居杨梅 >"
                    android:textColor="#000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="待付款"
                    android:textColor="@color/orange"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:paddingBottom="@dimen/dp4"
                android:paddingTop="@dimen/dp4"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp18"
                android:paddingRight="@dimen/dp18"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp4">

                    <ImageView
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/dp80"
                        android:layout_height="@dimen/dp80"
                        android:scaleType="fitXY"
                        android:text="一家人"
                        android:textColor="#000"
                        android:textSize="@dimen/sp14" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_toRightOf="@+id/cardView"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="枇杷"
                        android:textColor="#000"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tv_attr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp4"
                        android:text="价格单位"
                        android:textColor="#333"
                        android:textSize="@dimen/sp13" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp4"
                            android:textColor="#000"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_alignParentRight="true"
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp4"
                            android:textColor="#000"
                            android:textSize="@dimen/sp14"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp4"
                android:background="#f3f3f3" />


            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp20"
                android:paddingTop="@dimen/sp14"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="@dimen/sp14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送信息"
                    android:textColor="#000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="配送服务"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_ps_server"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="配送服务"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="配送地址"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_ps_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="浙江省台州市椒江区"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="配送费用"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_ps_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="￥ 10"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp4"
                android:background="#f3f3f3" />


            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp20"
                android:paddingTop="@dimen/sp14"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="@dimen/sp14">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单信息"
                    android:textColor="#000"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="订单号码"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_dd_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="配送服务"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="下单时间"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_dd_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="浙江省台州市椒江区"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp20"
                android:background="#f3f3f3" />

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="支付方式"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_dd_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp18"
                    android:paddingTop="@dimen/dp10"
                    android:paddingRight="@dimen/dp18"
                    android:paddingBottom="@dimen/dp10"
                    android:text="￥ 10"
                    android:textColor="#333"
                    android:textSize="@dimen/sp14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp4"
                android:background="#f3f3f3" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <!--待付款-->
    <LinearLayout
        android:id="@+id/ll_dfk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_sfje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3f3f3"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/tv_price_bottom"
                android:gravity="center"
                android:text="实付款："
                android:textColor="@color/black"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price_bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp10"
                android:layout_toLeftOf="@+id/tv_submit_order"
                android:gravity="center"
                android:text="￥10"
                android:textColor="@color/red"
                android:textSize="@dimen/sp17"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45">

            <TextView
                android:id="@+id/tv_bottom_btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:paddingLeft="@dimen/dp25"
                android:paddingRight="@dimen/dp25"
                android:text="取消订单"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bottom_btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:paddingLeft="@dimen/dp25"
                android:paddingRight="@dimen/dp25"
                android:text="确认付款"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
