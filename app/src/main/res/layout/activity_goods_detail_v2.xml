<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/common_toplayout" />

    <LinearLayout
        android:id="@+id/userInfoLinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:minHeight="80dp"
        android:layout_below="@+id/header"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/headerImgView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/nickNameTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#4a4a4a"
                />

            <TextView
                android:id="@+id/addressNameTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textColor="#9b9b9b"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="right|center_vertical"
            >

            <TextView
                android:id="@+id/priceTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#ff4200"
                />

            <TextView
                android:id="@+id/timeTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textColor="#9b9b9b"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/lineView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/userInfoLinLay"
        android:background="#fcfcfc"
        />

    <android.support.design.widget.TabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/lineView2"
        app:tabIndicatorColor="#7cb1de"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#4a4a4a"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="#4a4a4a"/>

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tabLayout"
        android:background="#e4e4e4"
        />

    <FrameLayout
        android:id="@+id/frameLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lineView"
        ></FrameLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/llCall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_about_phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3697db"
                android:inputType="phone"
                android:text="电话联系"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/llShotMsg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_toLeftOf="@id/llCall"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_short_msg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff9711"
                android:gravity="center"
                android:text="短信联系"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp14" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_about_phone" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:inputType="phone"
                android:text="联系商家"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>
