<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#5097d4"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <ImageButton
            android:layout_gravity="bottom"
            android:layout_width="50dp"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:onClick="backClick"
            android:src="@drawable/icon_back" />

        <EditText
            android:id="@+id/searchEditTxt"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_weight="1"
            android:background="@drawable/bg_white_round"
            android:drawableLeft="@drawable/icon_search_black"
            android:drawablePadding="18dp"
            android:gravity="left|center_vertical"
            android:hint="搜索"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#9B9B9B"
            android:textCursorDrawable="@drawable/edittext_cursor_drawable"
            android:textSize="@dimen/sp16" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="60dp"
            android:layout_height="@dimen/dp40"
            android:background="@color/transparent2"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shadow_bottom_grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/historyLinLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="最近搜索"
                        android:textColor="#9B9B9B"
                        android:textSize="@dimen/sp15" />

                    <ImageView
                        android:id="@+id/delHistoryImgView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/icon_del" />

                </RelativeLayout>

                <com.beyond.library.view.AutoWrapView
                    android:id="@+id/historyAutoWrapView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/hotLabelTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="热门搜索"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/sp15" />

            <com.beyond.library.view.AutoWrapView
                android:id="@+id/hotAutoWrapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
