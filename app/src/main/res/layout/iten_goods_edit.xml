<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratingbar="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sp10"
    android:paddingTop="@dimen/sp10"
    android:paddingRight="@dimen/sp10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_pay_unselected"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp6">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@mipmap/ceshi1111" />

            <TextView
                android:id="@+id/tv_zt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp3"
                android:paddingTop="@dimen/dp2"
                android:paddingRight="@dimen/dp3"
                android:paddingBottom="@dimen/dp2"
                android:text="已上架"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp9" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:maxLines="2"
                    android:text="仙居杨梅"
                    android:textColor="#000"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8">

                <TextView
                    android:id="@+id/tv_pt_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp6"
                    android:layout_toLeftOf="@+id/tv_group_price"
                    android:gravity="bottom"
                    android:text="10人拼团"
                    android:textColor="#000"
                    android:textSize="@dimen/sp11" />
                <TextView
                    android:id="@+id/tv_group_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="@dimen/dp6"
                    android:layout_toLeftOf="@+id/tv_price"
                    android:gravity="bottom"
                    android:text="拼团价:38元"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp11"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="bottom"
                    android:text="单价：48元"
                    android:textColor="#000"
                    android:textSize="@dimen/sp11" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp20"
                android:layout_marginTop="@dimen/dp6">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">
                    <com.idlestar.ratingstar.RatingStarView
                        android:id="@+id/rsv_rating"
                        android:layout_weight="1"
                        android:background="@color/white"
                        app:rsv_starForegroundColor="@color/orange"
                        app:rsv_starBackgroundColor="#E8E8E8"
                        app:rsv_strokeColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp15" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/is_like"
                    android:gravity="bottom"
                    android:text="已售98单"
                    android:textColor="#999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8">

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-12-3 19:30:00 "
                    android:textColor="#999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_sxj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp30"
                    android:text="上架"
                    android:textColor="@color/blue" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/sp8"
                android:background="#f3f3f3" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>