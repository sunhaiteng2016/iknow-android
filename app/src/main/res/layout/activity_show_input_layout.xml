<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_to_dismiss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8f000000"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <ImageView
            android:id="@+id/show_input_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_back_goods" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2.5"
        android:background="@drawable/show_input" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_input_wechat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/wechat"
            android:gravity="center_horizontal"
            android:text="微信好友"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/show_input_wechat_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/wechat_friend"
            android:gravity="center_horizontal"
            android:text="朋友圈"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/show_input_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/qq"
            android:gravity="center_horizontal"
            android:text="QQ好友"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/show_input_sina"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/sina_web"
            android:gravity="center_horizontal"
            android:text="微博"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/show_input_qzone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/qzone"
            android:gravity="center_horizontal"
            android:text="QQ空间"
            android:textColor="@color/white"
            android:textSize="10sp" />


    </LinearLayout>


</LinearLayout>