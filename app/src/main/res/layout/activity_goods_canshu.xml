<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.home.shopcart.GoodsCanShuActivity">
    <RelativeLayout
        android:id="@+id/topReLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3598DA">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:onClick="backClick"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/leftTxtView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="50dp"
            android:paddingLeft="@dimen/dp16"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/rightImgView"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/dp18"
            android:src="@drawable/icon_search_white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="@dimen/dp16"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:visibility="invisible" />

        <View
            android:id="@+id/shadowView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadow_bottom_grey" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_out"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:background="#33000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="17dp"
            android:paddingTop="15dp"
            android:text="产品参数"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <View
            android:id="@+id/view"
            style="@style/horizontal_divider"
            android:layout_below="@+id/text" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_canshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_next"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view"
            android:overScrollMode="never" />


        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue2"
            android:gravity="center"
            android:text="完    成"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>
