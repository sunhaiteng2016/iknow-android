<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.beyond.popscience.module.point.PointDetailActivity">

    <include layout="@layout/common_toplayout" />

    <com.beyond.library.view.pullrefresh.PullToRefreshListView
        android:id="@+id/my_point_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10">

        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp45"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_blue2"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/tv_exchange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp45"
            android:layout_marginRight="@dimen/dp45"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_blue"
            android:gravity="center"
            android:text="兑换"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
