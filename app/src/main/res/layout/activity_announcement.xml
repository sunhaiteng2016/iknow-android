<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey4"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toplayout" />

    <com.beyond.library.view.pullrefresh.PullToRefreshListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLineView"
        android:layout_below="@+id/topReLay"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />


    <View
        android:id="@+id/bottomLineView"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignTop="@+id/bottomLinLay"
        android:background="#bcbcbc" />

    <LinearLayout
        android:id="@+id/bottomLinLay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/collectionLinLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/collectedImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_collection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="收藏"
                android:textColor="#979797"
                android:textSize="@dimen/sp15" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#979797" />

        <LinearLayout
            android:id="@+id/shareLinLay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="转发"
                android:textColor="#979797"
                android:textSize="@dimen/sp15" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/emptyReLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topReLay"
        android:background="@color/grey4"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/reLoadImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/refresh_progress_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reLoadImgView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="点击屏幕，重新加载"
            android:textColor="#c1c1c1"
            android:textSize="@dimen/sp18" />

    </RelativeLayout>

</RelativeLayout>
