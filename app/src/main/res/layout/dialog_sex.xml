<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <View
        android:id="@+id/bgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/okTxtView"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bg_gray_round3"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/manReLay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#767676"
                android:textSize="@dimen/sp14"
                android:text="男"
                />

            <CheckBox
                android:id="@+id/manCheckBox"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:background="@drawable/check_selector"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#bababa"
            />

        <RelativeLayout
            android:id="@+id/womanReLay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#767676"
                android:textSize="@dimen/sp14"
                android:text="女"
                />

            <CheckBox
                android:id="@+id/womanCheckBox"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:background="@drawable/check_selector"
                android:clickable="false"
                />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/okTxtView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_gray_round3"
        android:textColor="#4a4a4a"
        android:textSize="@dimen/sp20"
        android:gravity="center"
        android:text="确定"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
