<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/headerPicImgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cover_grey"
        android:layout_alignBottom="@+id/headerPicImgView"
        />

    <TextView
        android:id="@+id/newsTitleTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/headerPicImgView"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp18"
        />

    <TextView
        android:id="@+id/authorTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_round2"
        android:layout_alignBottom="@+id/headerPicImgView"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp11"
        android:gravity="center"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/publishTimeTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/authorTxtView"
        android:layout_alignTop="@+id/authorTxtView"
        android:layout_alignBottom="@+id/authorTxtView"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp11"
        android:gravity="center"
        android:visibility="gone"
        />

</RelativeLayout>
