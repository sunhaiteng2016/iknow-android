<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey4"
    >

    <RelativeLayout
        android:id="@+id/topReLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3598DA"
        >

        <ImageButton
            android:id="@+id/backImgBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:src="@drawable/icon_back"
            android:onClick="backClick"
            />

        <ImageButton
            android:id="@+id/rightImgBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/searchLabelTxtView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@+id/backImgBtn"
            android:layout_toLeftOf="@+id/rightImgBtn"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_white_round"
            android:gravity="left|center_vertical"
            android:hint="秋名山"
            android:paddingLeft="10dp"
            android:textColor="#9B9B9B"
            android:textSize="@dimen/sp16"
            />

        <View
            android:id="@+id/shadowView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow_bottom_grey"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <com.beyond.library.view.pullrefresh.PullToRefreshListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        />

    <TextView
        android:id="@+id/emptyTxtView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/grey9"
        android:textSize="@dimen/sp19"
        android:text="未搜索到相关资讯"
        android:visibility="gone"
        />

</LinearLayout>
