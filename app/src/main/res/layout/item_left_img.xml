<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:background="@color/white">

        <android.support.v7.widget.CardView
            android:layout_margin="@dimen/dp8"
            android:id="@+id/img_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp4">

            <ImageView
                android:id="@+id/img"
                android:layout_width="126dp"
                android:layout_height="96dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp8"
            android:layout_toRightOf="@id/img_card_view"
            android:paddingTop="@dimen/dp8"
            android:paddingBottom="@dimen/dp8">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="@dimen/sp13" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/tvTip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp15"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="5dp"
                android:background="@drawable/tip_bg_round"
                android:gravity="center"
                android:paddingLeft="@dimen/dp2"
                android:paddingRight="@dimen/dp2"
                android:textColor="@color/grey15"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2017-05-28 09:45"
                android:textColor="@color/grey15"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/tvViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@id/tvDate"
                android:text="view:35"
                android:textColor="@color/grey15"
                android:textSize="@dimen/sp10"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tvTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_toRightOf="@id/tvViewCount"
                android:text="置顶"
                android:visibility="gone"
                android:textColor="#FA384F"
                android:textSize="@dimen/sp10" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/deliver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:visibility="visible" />

</LinearLayout>