<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comm_gray_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toplayout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/jobProvideLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/bannerReLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.beyond.popscience.frame.view.AutoViewPager
                        android:id="@+id/vp"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:minHeight="160dp" />

                    <com.beyond.popscience.widget.RecyclingCirclePageIndicator
                        android:id="@+id/recycleIndicator"
                        android:layout_width="100dp"
                        android:layout_height="@dimen/dp10"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="2dp"
                        android:padding="@dimen/dp2" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/companyTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="公司名称"
                        android:textColor="@color/grey17"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/companyTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/companyTip"
                        android:text="吾诺翰卓不发工资有限公司"
                        android:textColor="@color/grey17"
                        android:textSize="22sp" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="20dp"
                    android:orientation="vertical"
                    android:paddingRight="20dp">
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_marginLeft="20dp"
                            android:text="联系地址："
                            android:textColor="@color/grey17"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/addressTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:maxLines="2"
                            android:text="湫山乡·方宅"
                            android:textColor="@color/grey15"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:text="联系电话："
                            android:textSize="14sp"
                            android:textColor="@color/grey17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/zp_iphone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:maxLines="2"
                            android:text="1353000000"
                            android:textColor="@color/grey15"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:text="联系人    ："
                            android:textSize="14sp"
                            android:textColor="@color/grey17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/zp_moblie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:maxLines="2"
                            android:text="孙先生"
                            android:textColor="@color/grey15"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentTop="true">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="摄影师招聘"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:visibility="gone"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:textColor="@color/red4"
                        android:textSize="22dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/comm_gray_bg" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#e0e0e0" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="发布时间"
                            android:textColor="@color/grey17"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/timeTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="本科"
                            android:textColor="@color/grey17"
                            android:textSize="12sp" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#e0e0e0" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="职位"
                            android:textColor="@color/grey17"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/titleTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:textColor="@color/grey17"
                            android:textSize="12sp" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#e0e0e0" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">
                        <TextView
                            android:id="@+id/educationTip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="最低学历"
                            android:textColor="@color/grey17"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/educationTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/educationTip"
                            android:gravity="right"
                            android:singleLine="true"
                            android:text="本科"
                            android:textColor="@color/grey17"
                            android:textSize="12sp" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#e0e0e0" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="薪资"
                            android:textColor="@color/grey17"
                            android:textSize="14sp" />

                        <TextView
                            android:text="12K－16K"
                            android:id="@+id/priceTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:gravity="right"
                            android:singleLine="true"
                            android:textColor="@color/red"
                            android:textSize="18sp" />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#e0e0e0" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/workExperienceTip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="工作经验"
                            android:textColor="@color/grey17"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/workExperienceTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/workExperienceTip"
                            android:gravity="right"
                            android:text="2年及以上"
                            android:textColor="@color/grey17"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#e0e0e0" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/requireTip"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"
                            android:gravity="center_vertical"
                            android:text="职位描述"
                            android:textColor="@color/grey17"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/requireTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/requireTip"
                            android:gravity="center_vertical|right"
                            android:minHeight="45dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text=""
                            android:textColor="@color/grey17"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/comm_gray_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_goods_detail"
                        android:drawablePadding="@dimen/dp5"
                        android:gravity="center"
                        android:text="要求详情"
                        android:textColor="#d2d2d2"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/descriptTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="这里是一段我自己的自我陈述"
                    android:textColor="@color/grey17"
                    android:textSize="12sp" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/llCall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3697db"
                    android:inputType="phone"
                    android:text="电话联系"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/lxmj"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#23a12f"
                    android:inputType="phone"
                    android:text="在线咨询"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp14" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/emptyReLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:background="@color/grey4"
            android:visibility="gone">

            <ImageView
                android:id="@+id/reLoadImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/refresh_progress_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reLoadImgView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="点击屏幕，重新加载"
                android:textColor="#c1c1c1"
                android:textSize="@dimen/sp18" />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>