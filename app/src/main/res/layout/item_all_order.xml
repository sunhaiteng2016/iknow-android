<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp15">

        <ImageView
            android:layout_marginLeft="@dimen/dp10"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:scaleType="fitXY"
            android:src="@mipmap/ceshi1111" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15"
            android:text="仙居县大红枣专卖店"
            android:textColor="#333"
            android:textSize="@dimen/sp12"
            android:textStyle="bold" />

        <TextView
            android:textSize="@dimen/dp12"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="配送中"
            android:textColor="@color/red8" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:padding="@dimen/dp10">

        <android.support.v7.widget.CardView
            android:layout_marginLeft="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp4">

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:scaleType="fitXY"
                android:src="@mipmap/ceshi1111" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海南之家中腰牛仔裤2019直通水洗男士裤子HKNAW3N002Y 牛仔蓝01 108/94A"
                    android:textColor="#333"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp25"
        android:layout_marginTop="@dimen/dp10">

        <TextView
            android:layout_marginLeft="@dimen/dp4"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp10"
            android:textStyle="bold"
            android:textColor="#333"
            android:id="@+id/iv111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="¥168.00"
            android:textSize="@dimen/sp14" />
        <TextView
            android:textColor="#333"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/sp11"
            android:text="共7件商品   应付款："
            android:layout_toLeftOf="@+id/iv111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/submit_goods"
            android:paddingBottom="@dimen/dp2"
            android:paddingTop="@dimen/dp2"
            android:paddingRight="@dimen/dp6"
            android:paddingLeft="@dimen/dp6"
            android:textSize="@dimen/sp13"
            android:textColor="#333"
            android:text="查看物流"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp10"
            android:id="@+id/submit_goods"
            android:paddingBottom="@dimen/dp2"
            android:paddingTop="@dimen/dp2"
            android:paddingRight="@dimen/dp6"
            android:paddingLeft="@dimen/dp6"
            android:textSize="@dimen/sp13"
            android:background="@drawable/btn_bg_red8"
            android:textColor="@color/red8"
            android:text="确认收货"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3" />
</LinearLayout>