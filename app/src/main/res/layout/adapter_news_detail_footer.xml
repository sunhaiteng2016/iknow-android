<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:textColor="#0085D0"
            android:textSize="16sp"
            android:visibility="gone" />

        <com.beyond.popscience.widget.MyListView
            android:id="@+id/adj_list"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:minWidth="100dp" />

        <LinearLayout
            android:id="@+id/ll_yulan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/luokuan_lv"
            android:text="落款(署名)"
            android:visibility="gone" />

        <com.beyond.popscience.widget.MyListView
            android:id="@+id/luokuan_lv"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:divider="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="@dimen/dp15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_sz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sz" />

        <TextView
            android:layout_marginLeft="@dimen/dp30"
            android:id="@+id/linkTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="14dp"
        android:background="#e2e2e2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="来源"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/footerAuthorTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ly"
            android:gravity="center"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/sp13" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/footerPublishTimeTxtView"
            android:gravity="center"
            android:text="时间"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/sp13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/footerPublishTimeTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/sp13" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="责任编辑"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/sp13" />

        <TextView
            android:id="@+id/editorTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#6a6a6a"
            android:textSize="@dimen/sp13" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomLinLay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="@dimen/dp50"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/treadLinear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/selector_gray_blue"
            android:gravity="center"
            android:minWidth="80dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/treadImgView"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/icon_unlike" />

            <TextView
                android:id="@+id/treadTxtView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/treadFrameLay"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:text="0"
                android:textColor="@drawable/selector_txt_gray_blue"
                android:textSize="@dimen/sp14" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/praiseLinear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@drawable/selector_gray_red"
            android:gravity="center"
            android:minWidth="80dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">


            <ImageView
                android:id="@+id/praiseImgView"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp10"
                android:src="@drawable/icon_like" />

            <TextView
                android:id="@+id/praiseTxtView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/praiseFrameLay"
                android:gravity="center"
                android:text="0"
                android:textColor="@drawable/selector_txt_gray_red"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/questionLinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.beyond.library.view.ListViewNoScroll
            android:id="@+id/questionListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="3dp"
            android:listSelector="@color/transparent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/submitQuestionTxtView"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_login_btn"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="15sp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_recommend_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="推荐阅读"
            android:textSize="20sp" />

        <!--推荐阅读1-->
        <include
            android:id="@+id/recommendNewsOne"
            layout="@layout/item_left_img" />

        <!--推荐阅读2-->
        <include
            android:id="@+id/recommendNewsTwo"
            layout="@layout/item_left_img" />

        <!--推荐阅读3-->
        <include
            android:id="@+id/recommendNewsThree"
            layout="@layout/item_left_img" />
    </LinearLayout>


</LinearLayout>
