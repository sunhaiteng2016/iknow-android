<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toplayout" />

    <View style="@style/split_line_ten" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现账户"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/alipay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="支付宝"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/bg_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可提现金额"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/deposit_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="12sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/deposit_alipay_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="请输入支付宝账号"
        android:paddingLeft="15dp" />

    <View
        style="@style/horizontal_divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <EditText
        android:id="@+id/deposit_real_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="请输入真实姓名"
        android:paddingLeft="15dp" />

    <View
        style="@style/horizontal_divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/deposit_phone"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="请输入当前手机号码"
        android:paddingLeft="15dp"
        android:visibility="gone"/>

    <View
        style="@style/horizontal_divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/et_withdraw_money"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:inputType="number"
        android:hint="请输入提现金额"
        android:paddingLeft="15dp"
        android:visibility="gone"/>

    <View
        style="@style/horizontal_divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="短信验证码" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/deposit_input_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入验证码" />


        <TextView
            android:id="@+id/deposit_get_code"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_code_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/blue"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        style="@style/horizontal_divider"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <View
        style="@style/split_line_ten"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/deposit_right_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_blue_corner"
        android:text="提交审核"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="提现5个工作日到账"
        android:textColor="#bcbcbc" />

</LinearLayout>
