<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_half"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toplayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:text="* 填写企业名称" />

            <EditText
                android:id="@+id/companyNameView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border_round_grey"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="* 填写法人代表" />

            <EditText
                android:id="@+id/companyBossNameView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border_round_grey"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="* 填写社会统一代码号" />

            <EditText
                android:id="@+id/companyCodeView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border_round_grey"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <com.beyond.library.view.GridViewNoScroll
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:stretchMode="columnWidth" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="* 填写营业地址" />

            <EditText
                android:id="@+id/companyAddressView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border_round_grey"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="* 企业详细介绍" />

            <EditText
                android:id="@+id/companyDetailView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border_round_grey"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="* 联系电话" />

            <EditText
                android:id="@+id/companyPhoneView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border_round_grey"
                android:gravity="center_vertical"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="邀请码" />

            <EditText
                android:hint="可不填"
                android:id="@+id/ed_yq_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border_round_grey"
                android:gravity="center_vertical"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>