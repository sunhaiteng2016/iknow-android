<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="20dp"
    android:paddingTop="25dp"
    android:paddingRight="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarImgView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/default_header_icon" />

    <LinearLayout
        android:id="@+id/infoLinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatarImgView"
        android:gravity="center"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/authorTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="dq健康就好看阿萨德空间哈卡华师大打的阿斯达所大"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/timeStampTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="4小时前"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentLinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoLinLay"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:padding="@dimen/dp4"
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60"
                android:scaleType="centerCrop" />

            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp8"
                android:id="@+id/commentContentTxtView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/sp16" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/commentLinLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="gone">

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

            <include layout="@layout/adapter_social_circle_content_v2_comment_item" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/moreCommentTxtView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="查看更多评论 >"
                android:textColor="#3598DA"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/normalOperLinLay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/praiseLinLay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/praiseImgView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_like" />

                    <TextView
                        android:id="@+id/praiseNumTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="0"
                        android:textColor="#9b9b9b"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/replyLinLay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_feedback2" />

                    <TextView
                        android:id="@+id/replyNumTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:text="0"
                        android:textColor="#9b9b9b"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_15"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/zf" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingTop="5dp"
                        android:textColor="#9b9b9b"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/lineView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />
    </LinearLayout>

</RelativeLayout>