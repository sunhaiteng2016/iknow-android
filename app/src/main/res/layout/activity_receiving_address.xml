<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.beyond.popscience.locationgoods.ReceivingAddressActivity">

    <RelativeLayout
        android:id="@+id/rlss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/public_toolbar" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_address"
        android:layout_below="@+id/rlss">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/add_address"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll_default_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp60"
                                android:padding="@dimen/dp10">

                                <TextView
                                    android:id="@+id/name_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:maxLength="8"
                                    android:textColor="#333"
                                    android:textSize="@dimen/sp17"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/phone_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginLeft="@dimen/dp15"
                                    android:layout_toRightOf="@+id/name_tv"
                                    android:textColor="#333"
                                    android:textSize="@dimen/sp17"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/detail_address_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingLeft="@dimen/dp10"
                                android:paddingRight="@dimen/dp10"
                                android:paddingBottom="@dimen/dp10"
                                android:textSize="@dimen/dp14" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp1"
                                android:background="#f3f3f3" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dp1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp8"
                            android:layout_marginBottom="@dimen/dp8"
                            android:background="#f3f3f3" />

                        <RelativeLayout
                            android:id="@+id/rl_edit_address"
                            android:layout_width="@dimen/dp50"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/bianji" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp8"
                                    android:text="编辑"
                                    android:textColor="#333"
                                    android:textSize="@dimen/dp15" />
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_600"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/iv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/null_records" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv11"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="没有收货地址"
                    android:textColor="#000"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>


    <TextView
        android:id="@+id/add_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="@dimen/dp15"
        android:background="@drawable/shape_blue_corner"
        android:gravity="center"
        android:text="增加收货地址"
        android:textColor="@color/white" />
</RelativeLayout>
