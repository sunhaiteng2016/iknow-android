<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8">

        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/dp12">

            <TextView
                android:id="@+id/tvTip"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp5"
                android:background="@drawable/tip_bg_round"
                android:gravity="center"
                android:paddingLeft="@dimen/dp2"
                android:paddingRight="@dimen/dp2"
                android:text="营养小天使"
                android:textColor="@color/grey15"
                android:textSize="@dimen/sp10"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tvTip"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="@dimen/sp13"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llImg"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_below="@id/rlTitle"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp5"
            android:orientation="horizontal"
            android:padding="@dimen/dp4">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />


            <ImageView
                android:layout_marginLeft="@dimen/dp5"
                android:layout_weight="1"
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llImg"
                android:text="2017-05-28 09:45"
                android:textColor="@color/grey15"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/tvViewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/llImg"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@id/tvDate"
                android:text="view:35"
                android:textColor="@color/grey15"
                android:textSize="@dimen/sp10"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:text="置顶"
                android:textColor="#FA384F"
                android:textSize="@dimen/sp10"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/deliver"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp8"
        android:layout_gravity="bottom"
        android:visibility="visible" />

</LinearLayout>