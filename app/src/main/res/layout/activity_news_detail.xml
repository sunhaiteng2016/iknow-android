<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootReLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey4">

    <ImageView
        android:id="@+id/topPicImgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <com.donkingliang.headerviewadapter.view.HeaderRecyclerView
        android:id="@+id/listViewss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLinLay"
        android:layout_alignParentTop="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/topReLay"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <View
            android:id="@+id/topBgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="#3598DA" />

        <View
            android:id="@+id/statusBarTmpView"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/statusBarTmpView">

            <TextView
                android:id="@+id/titleTxtView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:alpha="0"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="科普•我知道"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

            <TextView
                android:id="@+id/ib_back_ss"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/zuo"
                android:onClick="backClick" />

            <ImageButton
                android:id="@+id/moreImgBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:padding="20dp"
                android:src="@drawable/icon_dots" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomLinLay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="4dp">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_round2"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/editCommentImgView"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingBottom="4dp"
                android:scaleType="center"
                android:src="@drawable/icon_edit" />

            <TextView
                android:id="@+id/publishCommentTxtView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:text="发布评论"
                android:textColor="#6A6A6A"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp45"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp"
            android:paddingTop="2dp">

            <LinearLayout
                android:id="@+id/collectionLinLay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="7dp">

                <RelativeLayout
                    android:layout_width="@dimen/dp30"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/fl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/collectedImgView"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/icon_collection_press" />

                        <ImageView
                            android:id="@+id/noCollectedImgView"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:background="#ffffff"
                            android:src="@drawable/icon_collection" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/collectionTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-6dp"
                        android:layout_toRightOf="@+id/fl1"
                        android:textColor="#6A6A6A"
                        android:textSize="@dimen/sp13" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lookCommentLinLay"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <RelativeLayout
                    android:layout_width="@dimen/dp30"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv1111"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_feedback2" />

                    <TextView
                        android:layout_marginLeft="-4dp"
                        android:layout_toRightOf="@+id/iv1111"
                        android:id="@+id/commentTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-1dp"
                        android:textColor="#6A6A6A"
                        android:textSize="@dimen/sp13" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shareLinLay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@mipmap/zf" />

                <TextView
                    android:id="@+id/shareTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="0"
                    android:textColor="#6A6A6A"
                    android:textSize="@dimen/sp9"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="@dimen/dp5"
        android:layout_marginBottom="@dimen/dp5"
        android:src="@drawable/selector_voice" />

    <com.beyond.popscience.frame.view.PublishedCommentView
        android:id="@+id/publishedCommentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/emptyReLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey4"
        android:visibility="gone">

        <View
            android:id="@+id/emptyStatusBarTmpView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#3598DA" />

        <RelativeLayout
            android:id="@+id/tmpTopRelay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/emptyStatusBarTmpView"
            android:background="#3598DA">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@color/transparent"
                android:onClick="backClick"
                android:src="@drawable/icon_back" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/reLoadImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/refresh_progress_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reLoadImgView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="点击屏幕，重新加载"
            android:textColor="#c1c1c1"
            android:textSize="@dimen/sp18" />

    </RelativeLayout>

</RelativeLayout>
