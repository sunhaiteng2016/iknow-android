<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_address_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_first_alphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3"
        android:padding="10dp"
        android:text="A"
        android:textColor="#333"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!--  <com.sunht.cast.business.addresslist.view.view.SwipeLayout
          android:id="@+id/swp_slip"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/space15">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp8">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp8"
            app:cardCornerRadius="@dimen/dp4">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/img"
                android:layout_width="@dimen/sp35"
                android:layout_height="@dimen/sp35" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/cardview"
            android:padding="4dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp30"
            android:background="@drawable/shape_button"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp4"
            android:paddingRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp4"
            android:text="邀请"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_add_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp30"
            android:background="@drawable/shape_button"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp4"
            android:paddingRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp4"
            android:text="添加好友"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp30"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp4"
            android:paddingRight="@dimen/dp10"
            android:paddingBottom="@dimen/dp4"
            android:text="好友"
            android:textColor="#333"
            android:textSize="@dimen/sp14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp30"
            android:visibility="gone" />
    </RelativeLayout>

    <!--     <include layout="@layout/layout_slip"></include>
     </com.sunht.cast.business.addresslist.view.view.SwipeLayout>-->
</LinearLayout>