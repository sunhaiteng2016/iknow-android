<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_collapseMode="pin"
        app:srlEnablePreviewInEditMode="true">
        <!--srlAccentColor srlPrimaryColor 将会改变 Header 和 Footer 的主题颜色-->
        <!--srlEnablePreviewInEditMode 可以开启和关闭预览功能-->
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:drawableLeft="@drawable/xingming"
                            android:drawablePadding="@dimen/dp10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp10"
                            android:textSize="@dimen/sp14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp1"
                            android:background="#f3f3f3" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:drawableLeft="@drawable/dingweihuang"
                            android:drawablePadding="@dimen/dp10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp10"
                            android:text="杭州市西湖区学院路96号"
                            android:textSize="@dimen/sp14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp1"
                            android:background="#f3f3f3" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:drawableLeft="@drawable/dianhuahuang"
                            android:drawablePadding="@dimen/dp10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp10"
                            android:text="18370033752"
                            android:textSize="@dimen/sp14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp1"
                            android:background="#f3f3f3" />

                        <TextView
                            android:id="@+id/tv_take"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:drawableLeft="@drawable/zxxz"
                            android:drawablePadding="@dimen/dp10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp10"
                            android:text="咨询"
                            android:textSize="@dimen/sp14" />
                        <TextView
                            android:id="@+id/tv_yysj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:drawableLeft="@drawable/shijian"
                            android:drawablePadding="@dimen/dp10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp10"
                            android:text="营业时间 ：06:30-20:30"
                            android:textSize="@dimen/sp14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp1"
                            android:background="#f3f3f3" />

                        <TextView
                            android:id="@+id/tv_ptps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:layout_marginRight="@dimen/dp10"
                            android:drawableLeft="@drawable/peisong"
                            android:drawablePadding="@dimen/dp10"
                            android:gravity="center_vertical"
                            android:padding="@dimen/dp10"
                            android:text="配送服务 ：平台配送"
                            android:textSize="@dimen/sp14"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp8"
                            android:background="#f3f3f3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:textSize="@dimen/sp16"
                            android:textColor="#333"
                            android:text="农户介绍" />

                        <TextView
                            android:id="@+id/tv_nhjs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp14" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp10"
                            android:textSize="@dimen/sp16"
                            android:textColor="#333"
                            android:text="农户实景" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/listView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/sp10" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_img_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/nhrz" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>